pipeline {
    agent any
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    def imageName = '2348_image'
                    docker.build(imageName)
                }
            }
        }
        stage('Remove Old Container') {
            steps {
                script {
                    sh 'docker rm -f 2348 || true'
                }
            }
        }
        stage('Run New Container') {
            steps {
                script {
                    sh 'docker run -d --name 2348 -p 5000:5000 2348_image'
                }
            }
        }
    }
}
